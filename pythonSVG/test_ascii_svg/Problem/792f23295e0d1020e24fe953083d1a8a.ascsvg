// ===================================================================================
// a - hypot
// b - vertical
// c - horizontal
// ===================================================================================

// =======================================
// Variables
// =======================================

a = 10.4432583147
b = 8
c = 6.71279704942
theta = 50

// =======================================
// Image Settings
// =======================================

setBorder(0)
axis_size = max(c + 0.5, b + 0.5) // Ensure that the pic is square
initPicture(-6, axis_size, -1, axis_size)

// =======================================
// Calculations
// =======================================

c = a*cos(theta*(pi/180))

// =======================================
// Draw Triangle
// =======================================

stroke = "black"
strokewidth = "1.5"
fill = "none"

path([[0,0],[c,0],[0,b],[0,0]])

// =======================================
// Draw Right Angle
// =======================================

square_radius = axis_size/12
path([[square_radius,0],[square_radius,square_radius],[0,square_radius]])

// =======================================
// Draw THETA Angle Arc
// =======================================

arc_radius = c/3
arc([c - arc_radius*cos(theta*pi/180), arc_radius*sin(theta*pi/180)], [c-arc_radius,0], arc_radius)

// =======================================
// Draw Building
// =======================================

stroke = "gray"
strokewidth = "2"
fill = "lightgray"
rect([-3.5,0],[0,b])

stroke = "gray"
strokewidth = "2"
fill = "yellow"
for (j = 0; j < floor(b); j ++)
{
  for (i = -3; i < 0; i ++)
  {
    rect([i,j+0.25],[i+0.5,j+0.75])
  }
}

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([c,0], "open")
stroke = "green"
strokewidth = "1"
dot([c,0], "closed", "Point A", belowleft)

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([0,b], "open")
stroke = "red"
strokewidth = "1"
dot([0,b], "closed", "Point B", right)

// =======================================
// Text
// =======================================

text([c-c/4*cos(0.5*theta*pi/180),c/4*sin(0.5*theta*pi/180)],"50")
//text([c-a/2cos(theta*pi/180),a/2sin(theta*pi/180)],"x",aboveright)
text([0,b/2],"8",right)
text([c/2,0],"6,71",above)

// =======================================

