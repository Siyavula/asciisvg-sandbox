setBorder(0)
y = 5
initPicture(-3.5,3.5,-3.5,3.5)

fontstyle="normal"
fontfamily="sanserif"
fontsize="14"
//makes the amino acid backbone
//first the atoms
text([-1.2,0],"H₂N")
text([0,0],"C")
text([1,0],"C")
text([2,1],"O")
text([2,-1],"O")
text([0,1],"H")

//then the lines connecting the atoms
line([-0.8,0],[-0.2,0])
line([0.2,0],[0.8,0])
line([1.1,0.15],[1.85,0.9])
line([1.15,0.1],[1.9,0.85])
line([1.2,-0.2],[1.8,-0.8])
line([0,0.2],[0,0.8])
line([0,-0.2],[0,-0.8])

//makes the terminal bits
if (y == 0)
//acid is glycine
{
	text([0,-1],"H")
}
else if (y == 1)
//acid is alanine
{
	text([0,-1],"CH₃")
}
else if (y == 2)
//acid is serine
{
	text([0,-1],"CH₂")
	text([0,-2],"OH")
	line([0,-1.2],[0,-1.8])
}
else if (y == 3)
//acid is cysteine
{
	text([0,-1],"CH₂")
	text([0,-2],"SH")
	line([0,-1.2],[0,-1.8])
}
else if (y == 4)
//acid is valine
{
	text([0,-1],"CH")
	text([0,-2],"CH₃")
	text([-1,-1],"CH₃")
	text([0.8,-1],"H")
	line([0,-1.2],[0,-1.8])
	line([-0.2,-1],[-0.7,-1])
	line([0.2,-1],[0.7,-1])
}
else if (y == 5)
//acid is leucine
{
	text([0,-1],"CH₂")
	text([0,-3],"CH₃")
	text([-1,-2],"CH₃")
	text([0.8,-2],"H")
	text([0,-2],"C")
	line([0,-1.2],[0,-1.8])
	line([-0.2,-2],[-0.7,-2])
	line([0.2,-2],[0.7,-2])
	line([0,-2.2],[0,-2.8])
}
else if (y == 6)
//acid is phenylalanine
{
	text([0,-1],"CH₂")
	text([0,-2],"C₆H₅")
	line([0,-1.2],[0,-1.8])
}
else
//acid is tyrosine
{
	text([0,-1],"CH₂")
	text([0,-2],"C₆H₄OH")
	line([0,-1.2],[0,-1.8])
}

