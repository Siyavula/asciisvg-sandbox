// Image Settings
// =======================================

setBorder(40)
initPicture(0,6,0,144.80427)
axes(10, 20.0, "labels", 1, 20.0)

// =======================================
// Line Drawing (question)
// =======================================

stroke = "blue"
strokewidth = 2
plot(["t","30*(1.3)^t"], 0, 6)

// =======================================
// Dot (Year 1)
// =======================================

stroke = "red"
strokewidth = 2
dot([0,30], "closed", "", below)

// =======================================
// Dot (Year 2)
// =======================================

stroke = "red"
strokewidth = 2
dot([1,39.0], "closed", "", above)

// =======================================
// Labels
// =======================================

text([6, 0], "Years since start", aboveleft)
text([0, 144.80427], "Population of springboks", right)

// =======================================
// Axis
// =======================================

for (i = 0; i <= 6; i += 1)
{
	text([0 + i, 0], 2006 + i, below)
}

