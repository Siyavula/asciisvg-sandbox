setBorder(0)
x = 3
y = 2
a = 3
t = 3.0
maxX = 12
maxY = 4
initPicture(-4.5,maxX,-1,maxY)

//makes the axes
line([0,0],[0,maxY])
line([0,0],[maxX,0])
//makes the y-lines
line([-.1,1],[.1,1])
line([-.1,2],[.1,2])
//makes the x-lines
line([1,-.1],[1,.1])
line([2,-.1],[2,.1])
line([3,-.1],[3,.1])
line([4,-.1],[4,.1])
line([5,-.1],[5,.1])
//labels the axes
fontstyle="normal"
text([0,0],"0",belowleft)
text([0,1],"1",left)
text([0,2],"2",left)
text([1,-0.1],"1",below)
text([2,-0.1],"2",below)
text([3,-0.1],"3",below)
text([4,-0.1],"4",below)
text([5,-0.1],"5",below)

//draw the two pulses overlayed with incorrect amplitude
path([[1+t,0],[1+t,y],[x+1+t,y],[x+1+t,0]])

//label the axes
fontstyle="normal"
text([maxX/2,-0.8],"distance (m)")
text([-2,maxY/2],"amplitude (m)")

//makes the arrows on the axes
marker="arrow"
line([0,maxY-1],[0,maxY])
line([maxX-1,0],[maxX,0])

//makes the extra ticks
if (maxX == 7)
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
}
else if (maxX == 8)
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
	text([7,-0.1],"7",below)
	line([7,-.05],[7,.05])
}
else if (maxX == 9)
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
	text([7,-0.1],"7",below)
	line([7,-.05],[7,.05])
	text([8,-0.1],"8",below)
	line([8,-.05],[8,.05])
}
else if (maxX == 10)
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
	text([7,-0.1],"7",below)
	line([7,-.05],[7,.05])
	text([8,-0.1],"8",below)
	line([8,-.05],[8,.05])
	text([9,-0.1],"9",below)
	line([9,-.05],[9,.05])
}
else if (maxX==11)
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
	text([7,-0.1],"7",below)
	line([7,-.05],[7,.05])
	text([8,-0.1],"8",below)
	line([8,-.05],[8,.05])
	text([9,-0.1],"9",below)
	line([9,-.05],[9,.05])
	text([10,-0.1],"10",below)
	line([10,-.05],[10,.05])
}
else
{
	text([6,-0.1],"6",below)
	marker="none"
	line([6,-.05],[6,.05])
	text([7,-0.1],"7",below)
	line([7,-.05],[7,.05])
	text([8,-0.1],"8",below)
	line([8,-.05],[8,.05])
	text([9,-0.1],"9",below)
	line([9,-.05],[9,.05])
	text([10,-0.1],"10",below)
	line([10,-.05],[10,.05])
	text([11,-0.1],"11",below)
	line([11,-.05],[11,.05])
}
