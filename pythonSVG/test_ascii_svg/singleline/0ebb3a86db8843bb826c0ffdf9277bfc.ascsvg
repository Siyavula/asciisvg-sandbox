setBorder(0)
initPicture(-10,10,-10,10)

v1 = 3
v2 = 2

// vector plot
fontstyle = "normal"
strokewidth = "2"
marker = "arrow"

// boat
line( [-3/2,2/2], [3/2,2/2] )
text( [0,2/2], "3 m/s" , above )

// current
line( [-3/2,-2/2], [-3/2,2/2] )
text( [-3/2,0], "2 m/s" , left )

// resultant seen by observer
line( [-3/2,-2/2], [3/2,2/2] )
text( [0,0], "R" , belowright )
