// =======================================
// Variables
// =======================================

float_x_int = 1.32
float_y_int = -1.2

// =======================================
// Image Settings
// =======================================

width="400"
height="400"
initPicture(-6, 6, -6, 6)	// xmin,xmax,ymin,ymax

setBorder(0)
axes(1, 1, "labels", 1)	// (dx, dy, "labels", grid size)

// =======================================
// Line Drawing
// =======================================

stroke = "red"
strokewidth = "2"
marker = "arrow" // "dot", "arrow", "arrowdot", "none"
plot("0.2 * 2 ^ (t + 2) + -2",-10,10)	//(["f(t)", "g(t)"],tmin,tmax)	

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([float_x_int,0], "open")
stroke = "yellow"
strokewidth = "1"
dot([float_x_int,0], "closed", "x-intercept", aboveright)

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([0,float_y_int], "open")
stroke = "yellow"
strokewidth = "1"
dot([0,float_y_int], "closed", "y-intercept", aboveleft)
