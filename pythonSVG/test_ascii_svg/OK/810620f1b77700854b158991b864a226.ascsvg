// =======================================
// Variables
// =======================================

float_x_int = 0.0
float_y_int = 0.0

float_x_A = 60
float_y_A = -1.0

float_x_B = -60
float_y_B = -1.0

int_ymin = -2.5
int_ymax = 1.5

// =======================================
// Image Settings
// =======================================

width="600"
height="300"
initPicture(-200,200, int_ymin + 0.4, int_ymax + 0.4)	// xmin,xmax,ymin,ymax

axes(45, 1, "labels", 22.5, 0.25)	// (dx, dy, "labels", grid_size_x, grid_size_y)

// =======================================
// Line Drawing
// =======================================

stroke = "red"
strokewidth = "2"
marker = "none" // "dot", "arrow", "arrowdot", "none"
plot("-1 * cos(pi*t/180) -0.5",-200,200)	//(["f(t)", "g(t)"],tmin,tmax)	

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([float_x_A,float_y_A], "open")
stroke = "yellow"
strokewidth = "1"
dot([float_x_A,float_y_A], "closed", "Point A", aboveright)

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([float_x_B,float_y_B], "open")
stroke = "yellow"
strokewidth = "1"
dot([float_x_B,float_y_B], "closed", "Point B",  aboveleft)


