// =======================================
// Image Settings
// =======================================

setBorder(0)
initPicture(-8.5, 8.5, -8.5, 8.5)
axes(1, 1, "labels", 1)

// =======================================
// Acis of Symmetry
// =======================================

stroke = "gray"
strokewidth = 2
strokedasharray = [5, 5]

plot(["t","t"], -10, 10)

// =======================================
// Original Graph
// =======================================

stroke = "blue"
strokewidth = 2
strokedasharray = [1,0]
plot(["2^t-3","t"], -10, 10)

// =======================================
// Inverse Graph
// =======================================

stroke = "green"
strokewidth = 2
plot(["t","2^t-3"], -10, 10)

// =======================================
// Inverse Graph
// =======================================

text([-8,8], "blue = f(x)", right)
text([-8,7], "green = inverse function", right)
text([7,8], "line of reflection (y = x)", left)

