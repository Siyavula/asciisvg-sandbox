// =======================================
// Variables
// =======================================

float_x_A = -1.5
float_y_A = -2.83333333333

float_x_B = -4.5
float_y_B = -0.166666666667

float_p = 3.0

// =======================================
// Image Settings
// =======================================

width="400"
height="400"
initPicture(-8, 8, -8, 8)	// xmin,xmax,ymin,ymax

setBorder(0)
axes(1, 1, "labels", 1)	// (dx, dy, "labels", grid size)

// =======================================
// Line Drawing
// =======================================

stroke = "red"
strokewidth = "2"
marker = "arrow" // "dot", "arrow", "arrowdot", "none"
plot("-2 / (t + 3) + -1.5",-10, - float_p - 0.01)	//(["f(t)", "g(t)"],tmin,tmax)	
plot("-2 / (t + 3) + -1.5", - float_p + 0.01,10)	//(["f(t)", "g(t)"],tmin,tmax)	

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([float_x_B,float_y_B], "open")
stroke = "yellow"
strokewidth = "1"
dot([float_x_B,float_y_B], "closed", "Point B", aboveright)

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([float_x_A,float_y_A], "open")
stroke = "yellow"
strokewidth = "1"
dot([float_x_A,float_y_A], "closed", "Point A", aboveright)

// =======================================
