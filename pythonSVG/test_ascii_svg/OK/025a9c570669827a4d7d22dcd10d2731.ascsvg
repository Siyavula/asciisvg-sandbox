setBorder(0)
//initialise picture
initPicture(-0.8,3, -0.3, 3)
axes(3,2)
marker = "arrow"
line([0,2],[0,3])
line([2,0],[3,0])
marker = "none"
//plot the shell trajectory (just a general parabola)
stroke = "blue"
plot("-2*(x-1)^2 + 2", 0, 2)
dot([1,2], "closed")
text([2,2.2], "point where the shell explodes")

stroke = "black"
line([0,2],[1,2])
line([1,0],[1,2])
text([0,0], "O")
text([-0.2,2.7], "y")
text([2.7, -0.2], "t")

