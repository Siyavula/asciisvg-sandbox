// ===================================================================================
// a - hypot
// b - vertical
// c - horizontal
// ===================================================================================

// =======================================
// Variables
// =======================================

a = 11.5470053838
b = 10
c = 5.7735026919
theta = 60

// =======================================
// Image Settings
// =======================================

setBorder(0)
axis_size = max(c + 0.5, b + 1.5) // Ensure that the pic is square
initPicture(-b/5-1, axis_size, -1, axis_size)

// =======================================
// Calculations
// =======================================

c = a*cos(theta*(pi/180))

// =======================================
// Draw Tree
// =======================================

radius = b/5
stroke = "black"
strokewidth = "2"
fill = "brown"
rect([-0.25, 0], [0.25, b-radius])

stroke = "green"
strokewidth = "2"
fill = "lightgreen"
circle([0,b-radius],radius)

stroke = "black"
strokewidth = "1.5"
fill = "none"

// =======================================
// Draw Triangle
// =======================================

path([[0,0],[c,0],[0,b],[0,0]])

// =======================================
// Draw Right Angle
// =======================================

square_radius = axis_size/12
path([[square_radius,0],[square_radius,square_radius],[0,square_radius]])

// =======================================
// Draw THETA Angle Arc
// =======================================

// arc_radius = c/3
// arc([c - arc_radius*cos(theta*pi/180), arc_radius*sin(theta*pi/180)], [c-arc_radius,0], arc_radius)


// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([c,0], "open")
stroke = "green"
strokewidth = "1"
dot([c,0], "closed", "Point A", belowleft)

// =======================================
// Dot
// =======================================

stroke = "black"
strokewidth = "4"
dot([0,b], "open")
stroke = "red"
strokewidth = "1"
dot([0,b], "closed", "Point B", right)

// =======================================
// Text
// =======================================

//text([c-c/4*cos(0.5*theta*pi/180),c/4*sin(0.5*theta*pi/180)],"60")
text([c-a/2*cos(theta*pi/180),a/2*sin(theta*pi/180)],"11,55",aboveright)
text([0,2*b/3],"x",right)
text([c/2,0],"5,77",above)

// =======================================

